(defvar google-calendar-sync-interval 600
  "If non-nil then google-calendar will be automatically synchronized
   every `google-calendar-sync-interval' seconds")

(defvar google-calendar-fetch-on-init t
  "If non-nil then google-calendar will be fetched on startup")

(defvar google-calendar-sync-on-exit t
  "If non-nil then google-calendar will be synchronized on exit")

(defvar google-calendar-sync-after-capture t
  "If non-nil then google-calendar will be synchronized after org-capture")

